<% content_for :title do %>
  Conta Bancaria
<% end %>

<div class="page-header">
  <h1>Conta Bancaria</h1>
  <%= link_to new_bank_account_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Nova Conta
  <% end %>
</div>

<h2>Saldo<%= format_BRL @total %></h2>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Numero Conta Corrente</th>
        <th>Cliente</th>
        <th>Data</th>
        <th>Saldo</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @bank_accounts.each do |bank_account| %>
        <tr>
          <td><%= bank_account.name %></td>
          <td><%= bank_account.account_number %></td>
          <td><%= bank_account.client %></td>
          <td><%= bank_account.date %></td>
          <td><%=format_BRL bank_account.balance %></td>
          <td>
            <%= link_to bank_account, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_bank_account_path(bank_account), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to bank_account, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>