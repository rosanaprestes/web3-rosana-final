
<%= simple_form_for @bank_account do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :account_number %>
    <%= f.input :client %>
    <%= f.input :date %>
    <%= f.input :balance %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Bank account' : 'Atualizar Bank account', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
