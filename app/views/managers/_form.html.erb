
<%= simple_form_for @manager do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :cpf %>
    <%= f.input :telephone %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Sindico' : 'Atualizar Sindico', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
