<% content_for :title do %>
  Despesas
<% end %>

<div class="page-header">
  <h1>Despesas</h1>
  <%= link_to new_expense_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Nova Despesa
  <% end %>
</div>
<h2> Pagas: <%= format_BRL @total_paid %></h2> <h2>à Pagar :<%=  format_BRL@total_not_paid %></h2>

<!--<h1>TOTAL <%= @total_paid %> #<> <%= @total_not_paid %></h1>-->
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
       <%= format_BRL @total %> 
        <th>Despesa</th>
        <th>Valor</th>
        <th>Vencimento</th>
        <th>Data de Pagamento</th>
        <th>Status</th>

      </tr>
    </thead>

    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td><%= expense.expense %></td>
          <td><%=format_BRL expense.value %></td>
          <td><%= expense.due_date %></td>
          <td><%= expense.pay_day %></td>
          <td><%= expense.status %></td>
           
          <td>
            <%= link_to expense, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_expense_path(expense), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to expense, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>