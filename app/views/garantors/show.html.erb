<% content_for :title do %>
  Detalhes de Garantor
<% end %>

<div class="page-header">
  <h1>Detalhes de Garantor</h1>
  <div>
    <%= link_to edit_garantor_path(@garantor), class: 'btn btn-success' do %>
      <%= icon 'fas', 'edit' %>
      Editar
    <% end %>
    <%= link_to garantors_path, class: 'btn btn-outline-secondary' do %>
      <%= icon 'fas', 'bars' %>
      Voltar
    <% end %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @garantor.name %></dd>

  <dt>Address:</dt>
  <dd><%= @garantor.address %></dd>

  <dt>Telephone:</dt>
  <dd><%= @garantor.telephone %></dd>

  <dt>Value tranfer:</dt>
  <dd><%= @garantor.value_tranfer %></dd>

</dl>
