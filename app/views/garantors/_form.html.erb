
<%= simple_form_for @garantor do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :telephone %>
    <%= f.input :value_tranfer %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Garantor' : 'Atualizar Garantor', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
